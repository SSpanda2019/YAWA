<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="Weather Location">

        <EditTextPreference
                android:key="ENTER_LOCATION"
                android:title="Enter Location"
                android:summary="The location for which the weather is displayed"
                android:defaultValue="Auckland"
               />
    </PreferenceCategory>

    <PreferenceCategory
            android:title="Units">
        <ListPreference
                android:key="UNIT_SYSTEM"
                android:title="Unit system"
                android:summary="%s"
                android:defaultValue="METRIC"
                android:entries="@array/unitSystemEntries"
                android:entryValues="@array/unitSystemValues"/>
    </PreferenceCategory>

</PreferenceScreen>